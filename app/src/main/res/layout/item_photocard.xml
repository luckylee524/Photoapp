<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/photcard"
        android:layout_width="327dp"
        android:layout_height="553dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:clipToOutline="true"
        android:background="@drawable/photcard"
        android:elevation="25dp">

        <!-- 포토카드 상단부 -->
        <RelativeLayout
            android:id="@+id/letterbox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:clipToOutline="true"
            android:background="@drawable/letterbox">

            <ImageView
                android:id="@+id/image"
                android:layout_width="303dp"
                android:layout_height="275dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- 포토카드 하단부 -->
        <RelativeLayout
            android:id="@+id/frame_7"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clipToOutline="true">

            <RelativeLayout
                android:id="@+id/frame_8"
                android:layout_width="240dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <RelativeLayout
                    android:id="@+id/notinterest"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:clipToOutline="true"
                    android:background="@drawable/notinterest"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:id="@+id/x"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true"
                        android:src="@drawable/x" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bookmarkbut"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:clipToOutline="true"
                    android:background="@drawable/bookmarkbut"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/bookmark"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true"
                        android:src="@drawable/bookmark"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/information"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:clipToOutline="true"
                    android:background="@drawable/information"
                    android:layout_alignParentEnd="true">
                    <RelativeLayout
                        android:id="@+id/informationinside"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:clipToOutline="true">
                        <ImageView
                            android:id="@+id/info"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:clipToOutline="true"
                            android:src="@drawable/info"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
